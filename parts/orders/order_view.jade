template(name='order_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    .ui.segment 
                        with order_product
                            a(href="/product/#{_id}")
                                img.ui.rounded.image(src="{{c.url image_id width=400 height=400}}")
                            a.ui.header(href="/product/#{_id}") #{title}
                            //- .ui.header #{cook_tip} cook tip
                            // .ui.header $#{order_total_transaction_amount} 
                            //     small total transaction amount
                    div
                .eight.wide.column
                    // a.ui.compact.button(href="/product/#{product_id}")
                    //     i.left.chevron.icon
                    //     img.ui.avatar.image(src="{{c.url order_product.image_id width=200 height=200}}")    
                    //     |#{order_product.title}
                    .ui.inline.header 
                        // strong '#{order_product.title}'
                        |order (#{status})
                    if can_edit
                        a(href="/order/#{_id}/edit" title='edit')
                            i.pencil.link.large.circular.icon
                    .ui.segment
                        .ui.header buyer:
                        a.ui.header(href="/user/#{_author_username}") #{_author_username}
                    .ui.header 
                        i.clock.icon
                        |when #{when}
                    if kve 'when' 'later'
                        +datetime_view key='pickup_datetime'
                    .ui.header status: #{status}
                    .ui.header 
                        i.shield.icon
                        |runner
                    unless runner_viewed
                        .ui.button.mark_viewed
                            |mark viewed
                    else 
                        .ui.header viewed at {{from_now runner_viewed_timestamp}} {{cal_time runner_viewed_timestamp}}
                    unless prep_started
                        .ui.button.mark_prep_started
                            +icolor name='new-product--v1' cl='ui avatar image'
                            |mark preparation started
                    else 
                        div
                        +icolor name='new-product--v1' cl='ui inline image'
                        .ui.inline.header prep started at {{from_now prep_started_timestamp}} {{cal_time prep_started_timestamp}}
                    .ui.button.mark_processed
                        |mark prepared
                    .ui.button.mark_delivery_started
                        |mark delivery started
                    unless arrived
                        .ui.button.mark_arrived
                            |mark arrived
                    else 
                        div
                        +icolor name='checked-truck' cl='ui inline image'
                        .ui.inline.header arrived at {{from_now arrived_timestamp}} {{cal_time arrived_timestamp}}
                    
                    .ui.button.mark_delivery_complete
                        i.checkmark.icon
                        |mark delivery complete
                    if arrived
                        +image_edit key='delivery_photo' direct=true
                        .ui.header {{from_now arrived}} {{cal_time arrived}}
                    
                    if is_admin
                        +kvs key='status' value='started' label='mark started' direct=true
                        if kve status 'started'
                            +kvs key='status' value='ready' label='mark ready' direct=true
                            +kvs key='status' value='picked_up' label='picked up' direct=true
                    div
                    .ui.inline.header 
                        i.user.outline.icon
                        |customer
                    +kvs key='status' value='picked_up' label='mark picked up' direct=true
                    with buyer
                        +user_card
                .four.wide.column
                    // |{{from_now datetime_available}}:
                    // +textarea_view key='description'
                    .ui.large.bulleted.list
                        .item
                            small ordered
                            strong #{when}
                            |({{long_date _timestamp}})
                        .item
                            small for 
                            strong ${{fixed order_price}}
                    div
                    .ui.inline.header ingredients
                    each order_product.ingredients
                        .ui.label #{this}
                    if pickup
                        .ui.header
                            |pickup
                    else if delivery
                        .ui.header 
                            |delivery
                    if can_edit
                        .ui.small.compact.button.cancel_order
                            i.remove.icon
                            |cancel
                    .ui.hidden.divider
                    +comments