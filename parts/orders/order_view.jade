template(name='order_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    .ui.segment 
                        with order_product
                            a(href="/product/#{_id}")
                                img.ui.rounded.image(src="{{c.url image_id width=400 height=400}}")
                            a.ui.header(href="/product/#{_id}") #{title}
                            //- .ui.header #{cook_tip} cook tip
                            // .ui.header $#{order_total_transaction_amount} 
                            //     small total transaction amount
                    div
                .eight.wide.column
                    // a.ui.compact.button(href="/product/#{product_id}")
                    //     i.left.chevron.icon
                    //     img.ui.avatar.image(src="{{c.url order_product.image_id width=200 height=200}}")    
                    //     |#{order_product.title}
                    .ui.inline.header 
                        // strong '#{order_product.title}'
                        |order (#{status})
                    if can_edit
                        a(href="/order/#{_id}/edit" title='edit')
                            i.pencil.link.large.circular.icon
                    .ui.segment
                        .ui.header buyer:
                        a.ui.header(href="/user/#{_author_username}") #{_author_username}
                    .ui.header 
                        i.clock.icon
                        |when #{when}
                    if kve 'when' 'later'
                        +datetime_view key='pickup_datetime'
                    .ui.header status: #{status}
                    .ui.header 
                        i.shield.icon
                        |runner
                    unless runner_viewed
                        .ui.basic.circular.button.mark_viewed
                            +icolor name='eye-checked' cl='ui avatar image'
                            |mark viewed
                    if runner_viewed 
                        div
                        +icolor name='eye-checked' cl='ui avatar image'
                        .ui.inline.header viewed at {{from_now runner_viewed_timestamp}} {{cal_time runner_viewed_timestamp}}
                        div
                        .ui.basic.circular.button.mark_preparing
                            +icolor name='new-product--v1' cl='ui avatar image'
                            |preparing
                    if preparing 
                        div
                        +icolor name='new-product--v1' cl='ui inline image'
                        .ui.inline.header prep started at {{from_now preparing_timestamp}} {{cal_time preparing_timestamp}}
                        div
                        .ui.basic.circular.button.mark_prepared
                            +icolor name='handle-with-care' cl='ui avatar image'
                            |prepared
                        div
                        .ui.basic.circular.button.mark_prepared
                            +icolor name='handle-with-care' cl='ui avatar image'
                            |prepared
                    if prepared 
                        div
                        +icolor name='truck' cl='ui inline image'
                        .ui.inline.header started delivery at {{from_now delivering_timestamp}} {{cal_time delivering_timestamp}}
                        div
                        .ui.basic.circular.button.mark_delivering
                            i.truck.icon
                            |delivering
                    if delivering 
                        div
                        +icolor name='truck' cl='ui inline image'
                        .ui.inline.header started delivery at {{from_now delivering_timestamp}} {{cal_time delivering_timestamp}}
                        
                        div
                        .ui.basic.circular.button.mark_arrived
                            i.marker.icon
                            |arrived
                    if arrived 
                        div
                        +icolor name='checked-truck' cl='ui inline image'
                        .ui.inline.header arrived at {{from_now arrived_timestamp}} {{cal_time arrived_timestamp}}
                        +image_edit key='delivery_photo' direct=true
                        if delivery_photo                        
                            div
                            .ui.basic.circular.button.mark_delivery_complete
                                i.large.checkmark.icon
                                |delivered
                    div
                    .ui.inline.header 
                        i.user.outline.icon
                        |customer
                    if delivered
                        if is_author
                            +kvs key='status' value='picked_up' label='picked up' direct=true
                            .ui.basic.circular.button.mark_arrived
                                +icolor name='pick-up' cl='ui inline image'
                                |mark picked up
                            
                    +kvs key='status' value='picked_up' label='mark picked up' direct=true
                    with buyer
                        +user_card
                .four.wide.column
                    // |{{from_now datetime_available}}:
                    // +textarea_view key='description'
                    .ui.large.bulleted.list
                        .item
                            small ordered
                            strong #{when}
                            |({{long_date _timestamp}})
                        .item
                            small for 
                            strong ${{fixed order_price}}
                    div
                    .ui.inline.header ingredients
                    each order_product.ingredients
                        .ui.label #{this}
                    if pickup
                        .ui.header
                            |pickup
                    else if delivery
                        .ui.header 
                            |delivery
                    if can_edit
                        .ui.small.compact.button.cancel_order
                            i.remove.icon
                            |cancel
                    .ui.hidden.divider
                    +comments